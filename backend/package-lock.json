{
  "name": "ecommers-backend",
  "version":"1.0.0",
  "description":"Backend para el sistema de E-commers con node.js, Express y Sequelize",
  "main":"server.js",
  "scripts":{
    "start":"node server.js",
    "dev":"nodemon server.js",
    "init-db":"node config/CreateDatabase.js",
    "reset-db":"node config/restDatabase.js",
    "seed":"node -e \"require('./seeders/adminSeeder').tunSeeders().then(() => process.exit(0)).catch((err) => {console.error(err):process.exit(1); })\"",
    "test":"jest --detectedOpenhandles --forceExit",
    "test-watch":"jest --watch",
    "test-coverage":"jest --coverage"
  },
  "keywords": [
    "e-comerce",
    "node.js",
    "express",
    "sequelize",
    "jwt",
    "mysql"
  ],
  "author": "Ciro",
  "license": "ISC",
  "dependencies":{
    "bcrypt": "^2.4.3",
    "cors": "^2.8.5",
    "dotenv": "^16.3.1",
    "express": "^4.18.2",
    "express-validator": "^7.0.1",
    "jsonwebtoken": "^9.0.2",
    "multer": "^1.4.5-lst.1",
    "mysql2": "^3.6.5",
    "sequelize": "^6.35.2"
  },
    "devDependencies": {
      "@types/jest": "^30.2.0",
      "nodemon": "^3.0.2",
      "supertest": "^7.2.2"
    }
}
